<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_parent_drawer_layout"
    tools:context=".View.MainParent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_parent_cl"
        android:background="@drawable/main_parent_bg">

        <include
            layout="@layout/main_toolbar"/>


        <ImageView
            android:id="@+id/main_parent_background_iv"
            android:layout_width="237dp"
            android:layout_height="166dp"
            android:scaleType="centerCrop"
            android:src="@drawable/illustration"
            app:layout_constraintBottom_toTopOf="@+id/main_parent_ll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_parent_creativity_tv" />

        <LinearLayout
            android:id="@+id/main_parent_ll"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="70dp"
            android:orientation="vertical"
            android:background="@drawable/main_parent_bg_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <LinearLayout
                android:id="@+id/main_parent_ll_ll1_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:paddingTop="24dp"
                >

                <LinearLayout
                    android:id="@+id/main_parent_ll_ll1_ll1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <LinearLayout
                        android:id="@+id/main_parent_ll_ll1_ll1_ll1_general_notes"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/general_notes_card"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <ImageView
                            android:id="@+id/main_parent_ll_ll1_ll1_ll1_iv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_general_notes" />

                        <TextView
                            android:id="@+id/main_parent_ll_ll1_ll1_ll1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/MAIN_GENERALNOTE"
                            android:textColor="@color/LemonChiffon"
                            android:textSize="18sp"
                            android:textStyle="bold|italic" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_parent_ll_ll1_ll2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <LinearLayout
                        android:id="@+id/main_parent_ll_ll1_ll2_ll2_special_notes"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/special_note"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <ImageView
                            android:id="@+id/main_parent_ll_ll1_ll2_ll2_iv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="12dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_private_notes" />

                        <TextView
                            android:id="@+id/main_parent_ll_ll1_ll2_ll2_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/MAIN_SPECIALNOTE"
                            android:textColor="@color/LemonChiffon"
                            android:textSize="18sp"
                            android:textStyle="bold|italic" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_parent_ll_ll1_ll3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                    <LinearLayout
                        android:id="@+id/main_parent_ll_ll1_ll3_ll3_final_result"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/final_result_card"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp">

                        <ImageView
                            android:id="@+id/main_parent_ll_ll1_ll3_ll3_iv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"

                            android:src="@drawable/ic_final_result" />

                        <TextView
                            android:id="@+id/main_parent_ll_ll1_ll3_ll3_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:text="@string/MAIN_FINAL_RESULT"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/LemonChiffon"
                            android:textSize="18sp"
                            android:textStyle="bold|italic" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_parent_ll2_ll1_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingEnd="4dp"
                    android:layout_weight="1"
                    android:paddingStart="47dp"
                    android:layout_gravity="start"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/main_parent_ll2_ll1_ll1_ll1_calender"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_gravity="start"
                        android:background="@drawable/special_note">

                        <ImageView
                            android:id="@+id/main_parent_ll2_ll1_ll1_ll1_iv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"

                            android:layout_marginTop="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calender" />

                        <TextView
                            android:id="@+id/main_parent_ll2_ll1_ll1_ll1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/MAIN_CALENDER"
                            android:layout_marginStart="1dp"
                            android:textColor="@color/LemonChiffon"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold|italic"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_parent_ll2_ll1_ll2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingEnd="4dp"
                    android:layout_weight="1"
                    android:paddingStart="35dp"
                    android:orientation="vertical"

                    >

                    <LinearLayout
                        android:id="@+id/main_parent_ll2_ll1_ll2_ll2_sends_message"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/special_note">

                        <ImageView
                            android:id="@+id/main_parent_ll2_ll1_ll2_ll2_iv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_send_message"/>

                        <TextView
                            android:id="@+id/main_parent_ll2_ll1_ll2_ll2_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/MAIN_SEND_NOTE_TO_THE_INSTRUCTOR"
                            android:layout_marginStart="1dp"
                            android:textColor="@color/LemonChiffon"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold|italic"
                            />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout


                    android:id="@+id/main_parent_ll2_ll1_ll1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingEnd="4dp"
                    android:paddingStart="47dp"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:orientation="vertical"
                    >

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_gravity="start"
                        android:background="@drawable/special_note">

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="12dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calender" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/MAIN_CALENDER"
                            android:layout_marginStart="1dp"
                            android:textColor="@color/LemonChiffon"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold|italic"
                            />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/main_parent_drawer_layout_rl"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/White"

        >

        <include layout="@layout/main_nav_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>