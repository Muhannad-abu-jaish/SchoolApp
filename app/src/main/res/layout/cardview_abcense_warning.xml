<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        android:outlineSpotShadowColor="@color/Violet"
        android:outlineAmbientShadowColor="@color/Violet"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/Lgary"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="111dp"
                    android:layout_height="111dp"
                    android:padding="10dp"
                    android:src="@drawable/logo_no_background"/>
               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/Absence_warning_text"
                        android:layout_width="match_parent"
                        android:layout_height="224dp"
                        android:gravity="bottom"
                        android:padding="10dp"
                        android:textColor="@color/MediumVioletRed"
                        android:shadowColor="@color/DarkMagenta"
                        android:textSize="30sp"
                        android:text=""/>

               </ScrollView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_gravity="end"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:gravity="end"
                    >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/MediumVioletRed"
                    android:shadowColor="@color/DarkMagenta"
                    android:text="start Date : "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:id="@+id/start_date_Absence_warning"
                    android:textColor="@color/MediumVioletRed"
                    android:shadowColor="@color/DarkMagenta"
                    android:text="start Date : "/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    >
                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/MediumVioletRed"
                    android:shadowColor="@color/DarkMagenta"
                    android:text="finish Date : "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:id="@+id/exp_date_Absence_warning"
                    android:textColor="@color/MediumVioletRed"
                    android:shadowColor="@color/DarkMagenta"
                    android:text=" Date : "/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>